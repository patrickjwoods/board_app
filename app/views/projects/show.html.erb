<p id="notice"><%= notice %></p>

  <h1 class="center">
  	<%= @project.name %>
	</h1>

<% @project.boards.each do |board| %>
	<h3 class="center">
		<%= link_to board.title, project_board_path(@project,board) %>
	</h3>
	<p class="center">
		<%= board.description %> — <%= link_to 'Delete', project_board_path(@project,board), method: :delete, data: { confirm: 'Are you sure?' } %>
	</p>

<% end %>

<p class="center"><%= link_to 'Add New Board', new_project_board_path(@project), class: "btn btn-primary" %> <p>

